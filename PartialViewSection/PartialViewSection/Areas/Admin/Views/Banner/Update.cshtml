@model Banner
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="Admin" asp-controller="Banner" asp-action="Update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.SupTitle" class="form-label">Sup Title</label>
                    <input class="form-control" asp-for="@Model.SupTitle">
                    <span asp-validation-for="@Model.SupTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Page" class="form-label">Page</label>
                    <input class="form-control" asp-for="@Model.Page">
                    <span asp-validation-for="@Model.Page" class="text-danger"></span>
                </div>
                <input class="form-control" type="hidden" asp-for="@Model.Id">

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Banner" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>